{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": [
    "./types/**/*"
  ]
}
